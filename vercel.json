{
  "version": 2,
  "builds": [
    {
      "src": "src/app/main.ts",
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "50mb"
      }
    },
    {
      "src": "src/public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/fen-tool",
      "dest": "/index.html"
    },
    {
      "src": "/fen-tool/(.*)",
      "dest": "/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "PUBLIC_DIR": "src/public"
  },
  "functions": {
    "api/**.ts": {
      "maxDuration": 10,
      "memory": 1024
    }
  },
  "build": {
    "env": {
      "RSBUILD_VERSION": "1.2.7"
    }
  },
  "git": {
    "ignore": [
      "/node_modules/*",
      "/dist/*",
      "/src/generated/*"
    ]
  }
}
